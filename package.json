{
  "name": "@halo-dev/shop-templates",
  "scripts": {
    "build": "pnpm -r run build && vite build",
    "prettier": "prettier --write ."
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "plugins": [
      "prettier-plugin-svelte",
      "prettier-plugin-organize-imports"
    ],
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  },
  "dependencies": {
    "@halo-dev/shop-ui": "workspace:*",
    "medium-zoom": "^1.1.0",
    "swiper": "^12.0.3"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-svelte": "^3.4.1",
    "typescript": "^5.9.3",
    "vite": "8.0.0-beta.1"
  },
  "packageManager": "pnpm@10.26.0"
}
